# frozen_string_literal: true

source "https://rubygems.org"

# MCP Server library
gem "mcp-rb", "~> 0.3"
# For reading environment variables from .env
gem "dotenv"
# For generating XML output
gem "rexml", "~> 3.4"
# To provide a callback URL for OAuth2
gem "webrick", "~> 1.9"

# For accessing GitHub API
gem "octokit", "~> 9.0"
# For accessing Slack API
gem "slack-ruby-client", "~> 2.5"

group :development, :test do
  gem "standard"
end
